{
  "compilerOptions": {
    "rootDir": ".",
    "types": ["@cloudflare/workers-types", "@types/node"],
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["app/**/*", "*.ts", "*.tsx"]
}

